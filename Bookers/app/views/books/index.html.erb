<% if flash[:notice] %>
	<p><%= flash[:notice] %></p>
<% end %>
<h1>Books</h1>
	<table>
		<thead>
			<tr>
				<th> Title</th>
				<th> body</th>
				<th colspan="3"></th>
			</tr>
		</thead>
		<tbody>
		    	<% @books.each do |book| %>
		    	<tr>
			    	<td>
			    		<%= book.title %>
			    	</td>
			    	<td>
			    		<%= book.body %>
			    	</td>
			    	<td>
			    		<%= link_to "show", book_path(book.id),class: "show_#{book.id}" %>
			    	</td>
			    	<td>
			    		<%= link_to "edit", edit_book_path(book.id),class: "edit_#{book.id}" %>
			    	</td>
			    	<td>
			    		<%= link_to "Destroy",book_path(book.id), method: :delete ,class: "Destroy_#{book.id}" %>
			    	</td>
					<% end %>
				</tr>
		</tbody>
	</table>
<h2>New books</h2>


<%= form_for(@book) do |f| %>

	<h4> title</h4>
	<%= f.text_field :title,class: "book_title" %>

	<h4> body</h4>
	<%= f.text_area :body,class: "book_body" %>

	<%= f.submit 'create Book'%>

<% end %>